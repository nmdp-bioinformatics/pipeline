          color: "#D3D5D6",
          highlight: "#DCDDDE",
          label: "Error"
        }

      ];

	};
	#          color:"#0079C1",
    #highlight: "#3394CD",
    #     color: "#B4C932",
    #     highlight: "#C3D45B",    
	print $html $pie_data;

	my $bar_chart_data = qq{
		      var barChartData = {
        labels : ["A","B","C","DRB1","DQB1"],
        datasets : [
          {
            fillColor : "#46BFBD",
            strokeColor : "#46BFBD",
